{
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle_controls": {
      "description": "Toggle YouTube video controls visibility",
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      }
    }
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://www.youtube.com/watch*"
      ]
    }
  ],
  "description": "Toggle video controls visibility on YouTube.",
  "manifest_version": 3,
  "name": "YouTube Video Controls Toggle",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "version": "1.0"
}
